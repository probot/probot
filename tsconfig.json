{
  "extends": "@octokit/tsconfig",
  "compilerOptions": {
    "module": "CommonJS",
    "verbatimModuleSyntax": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "lib": ["es2023", "dom"]
  },
  "include": ["src/**/*"],
  "compileOnSave": false
}
