{
  "extends": "@octokit/tsconfig",
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": true,
    "lib": ["es2023", "dom"]
  },
  "include": ["src/**/*"],
  "compileOnSave": false
}
