    "@types/express": "^4.17.2",
    "@types/ioredis": "^4.0.6",
    "@types/jest": "^25.1.3",
    "@types/js-yaml": "^3.10.1",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^13.1.0",
    "@types/raven": "^2.1.5",
    "@types/resolve": "^1.14.0",
    "@types/semver": "^7.1.0",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^7.0.0",
    "connect-sse": "^1.2.0",
