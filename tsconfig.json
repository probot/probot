{
  "extends": "@octokit/tsconfig",
  "compilerOptions": {
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "sourceMap": false,
    "outDir": "./lib",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "allowJs": true,
    "lib": ["es2023"],
    "strict": true,
    "strictNullChecks": true,
    "erasableSyntaxOnly": true
  },
  "include": ["src/**/*"],
  "compileOnSave": false
}
